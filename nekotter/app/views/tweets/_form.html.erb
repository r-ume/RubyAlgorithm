<%= simple_form_for @tweet, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :text %>
  <% if action_name == 'edit' %>
    <%= error_span(@tweet[:text]) %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tweets_path, :class => 'btn btn-default' %>
<% end %>
